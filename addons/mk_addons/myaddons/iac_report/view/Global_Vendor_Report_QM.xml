<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

       <record id="view_global_vendor_qm_report_list" model="ir.ui.view">
            <field name="name">Global Vendor Report-QM</field>
            <field name="type">tree</field>
            <field name="model">v.global.vendor.qm.report</field>
            <field name="arch" type="xml">
                <tree string="Global Vendor Report QM" create="false">
                    <field name="gv_code"/>
                    <field name="global_name1"/>
                    <field name="global_name2"/>
                    <field name="sc_code"/>
                    <field name="sc_name"/>
                    <field name="vendor_code"/>
                    <field name="vendor_name"/>
                    <field name="currency"/>
                    <field name="plant"/>
                    <field name="payment_term"/>
                    <field name="vendor_sap_status"/>
                    <field name="create_date"/>
                    <field name="use_project"/>
                    <field name="incoterm"/>
                    <field name="destination"/>
                    <field name="reason"/>
                    <field name="vendor_type"/>
                    <field name="plm_name"/>
                    <field name="current_class"/>
                    <field name="registration_type"/>
                    <field name="address_country"/>
                </tree>
            </field>
        </record>

       <record id='iac_global_vendor_qm_report_wizard_form' model='ir.ui.view'>
          <field name='name'>Global Vendor Report-QM</field>
          <field name='model'>v.global.vendor.qm.report.wizard</field>
          <field name='arch' type='xml'>
              <form string="Global Vendor Report QM">
                <sheet>
                    <group>
                        <group>
                            <field name="plant_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}" required = "1" />
                            <field name='gv_id' options="{'no_create': True, 'no_edit': True, 'no_open': True}" />
                            <field name='global_name1'/>
                            <field name='vendor_name'/>
                            <field name='plm_name'/>
                            <field name='vendor_id' options="{'no_create': True, 'no_edit': True, 'no_open': True}" />
                        </group>
                    </group>
                </sheet>
                  <footer>
                <button name='search_global_vendor_report_qm'
                        string='Search'
                        class='btn-primary'
                        type='object'/>
                or
                <button string='Cancel'
                        class='btn-default'
                        special='cancel'/>
              </footer>
            </form>
          </field>
        </record>

        <act_window id="action_wizard_iac_global_vendor_qm_report"
                    name="Global Vendor Report - QM"
                    res_model="v.global.vendor.qm.report.wizard"
                    view_mode="form"
                    target="new"/>
    </data>

</odoo>