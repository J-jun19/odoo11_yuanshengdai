<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

      <record id="view_iac_vendor_forecast_delivery_report_form" model="ir.ui.view">
          <field name="name">iac.vendor.forecast.delivery.report</field>
          <field name="model">iac.vendor.forecast.delivery.report</field>
          <field name="arch" type="xml">
              <form>
                  <group>
                      <field name="buyer_id" options="{'no_create': True, 'no_edit': True,'no_open': True}" />
                      <field name="vendor_id" options="{'no_create': True, 'no_edit': True,'no_open': True}" required="1"/>
                  </group>
                  <footer>
                      <button name="action_confirm" string="Confirm" type="object"  class="oe_highlight"  />
                      or
                      <button string="Cancel" class="oe_link" special="cancel" />
                  </footer>
              </form>
          </field>
      </record>


      <record model="ir.actions.act_window" id="action_iac_vendor_forecast_delivery_report">
          <field name="name">Vendor Forecast Delivery Report</field>
          <field name="res_model">iac.vendor.forecast.delivery.report</field>
          <field name="view_type">form</field>
          <field name="view_mode">form</field>
          <field name="target">new</field>
      </record>

  </data>
</odoo>