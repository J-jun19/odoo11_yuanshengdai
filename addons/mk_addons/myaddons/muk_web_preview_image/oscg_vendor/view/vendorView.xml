      <record id="view_vendor_block_form" model="ir.ui.view">
        <field name="name">Vendor Block</field>
        <field name="type">form</field>
        <field name="model">iac.vendor.block</field>
        <field name="arch" type="xml">
            <form string="Vendor Block or Unblock">
                <header>
                    <button String="送签" states="draft,unapproved" type="object" class="oe_highlight" name="button_to_approve" groups="oscg_vendor.IAC_buyer_groups"/>
                    <button String="取消" states="draft" type="object" class="oe_highlight" name="button_cancel" groups="oscg_vendor.IAC_buyer_groups"/>
                    <button String="Call SAP" states="sap error" type="object" class="oe_highlight" name="button_to_sap" groups="oscg_vendor.IAC_buyer_groups"/>
