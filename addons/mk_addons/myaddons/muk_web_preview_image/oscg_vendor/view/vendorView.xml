                </header>
                <sheet string="Vendor Block or Unblock">
                    <group string="Vendor Block or Unblock">
                        <group>
                            <field name="plant_id" options="{'no_create': True}" required="1" attrs="{'readonly': [('state', 'not in', ('draft', 'unapproved'))]}"/>
