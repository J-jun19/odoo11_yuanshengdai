<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <data>
    <record id="view_vendor_list" model="ir.ui.view">
        <field name="name">Bank Info.</field>
        <field name="type">tree</field>
        <field name="model">iac.vendor.vendor</field>
        <field name="arch" type="xml">
            <tree string="Bank Info." create="false">
                <field name="state"/>
                <field name="name"/>
                <field name="vendor_code"/>
                <field name="user_id"/>
                <field name="buyer_email"/>
                <field name="current_class" />
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="view_vendor_form" model="ir.ui.view">
        <field name="name">Bank Info.</field>
        <field name="type">form</field>
        <field name="model">iac.vendor.vendor</field>
        <field name="arch" type="xml">
            <form string="Bank Info." create="false">
                <header>
                    <button String="提交" states="draft" type="object" class="oe_highlight" name="button_submit" groups="oscg_vendor.IAC_vendor_groups"/>
                    <button String="拒绝" states="submit" type="object" class="oe_highlight" name="button_reject" groups="oscg_vendor.IAC_buyer_groups"/>
                    <button String="送签" states="submit,unapproved" type="object" class="oe_highlight" name="button_to_approve" groups="oscg_vendor.IAC_buyer_groups"/>
                    <button String="Call SAP" states="sap error" type="object" class="oe_highlight" name="button_to_sap" context="{'vendor_id':True}" groups="oscg_vendor.IAC_buyer_groups"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submit,to approve,to sap,done" readonly="1"/>
                </header>
                <sheet string="Bank Info.">
                <group col="4">
                    <field name="name" readonly="1"/>
                    <field name="vendor_code" readonly="1"/>
                    <field name="user_id" readonly="1"/>
                    <field name="vendor_reg_id" readonly="1"/>
                    <field name="buyer_email" readonly="1"/>
                    <field name="current_class" readonly="1"/>
                    <field name="state_msg" readonly="1"/>
                    <field name="webflow_number"/>
                </group>
                <notebook>
                    <page string="Bank Info">
                       <group>
                           <field name="bank_name" attrs="{'readonly': [('state', 'not in', ('draft', 'submit', 'unapproved'))]}"/>
                           <field name="branch_name" attrs="{'readonly': [('state', 'not in', ('draft', 'submit', 'unapproved'))]}"/>
                           <field name="account_number" attrs="{'readonly': [('state', 'not in', ('draft', 'submit', 'unapproved'))]}"/>
                           <field name="swift_code" attrs="{'readonly': [('state', 'not in', ('draft', 'submit', 'unapproved'))]}"/>
                           <field name="transfer_number" attrs="{'readonly': [('state', 'not in', ('draft', 'submit', 'unapproved'))]}"/>
                           <field name="bank_street" attrs="{'readonly': [('state', 'not in', ('draft', 'submit', 'unapproved'))]}"/>
                           <field name="bank_city" attrs="{'readonly': [('state', 'not in', ('draft', 'submit', 'unapproved'))]}"/>
                           <field name="bank_country" attrs="{'readonly': [('state', 'not in', ('draft', 'submit', 'unapproved'))]}" options="{'no_create': True, 'no_edit': True}"/>
                        </group>
                    </page>
                    <page string="Bank Attachment">
                        <field name="attachment_ids" widget="one2many_list" attrs="{'readonly': [('state', 'not in', ['draft', 'submit'])]}">
                            <tree string="Attachment" create="false" delete="false">
                                <field name="type" />
                                <field name="file_id" widget="dms_file" string="Attachment" directory="model_muk_dms_directory.2" />
                                <field name="approver_id" options="{'no_create': True, 'no_edit': True}" context="{'filter_user_by_type_and_plant': True, 'attachment_type_id': type}" groups="oscg_vendor.IAC_buyer_groups,oscg_vendor.IAC_qs_groups"/>
                                <field name="expiration_date"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Vendor Basic Data" groups="oscg_vendor.IAC_buyer_groups">
                        <group>
                            <group>
                                <field name="rma_terms" attrs="{'readonly': [('state', 'not in', ('draft', 'submit', 'unapproved'))]}"/>
                                <field name="it_level" attrs="{'readonly': [('state', 'not in', ('draft', 'submit', 'unapproved'))]}"/>
                                <field name="plant" attrs="{'readonly': [('state', 'not in', ('draft', 'submit', 'unapproved'))]}" options="{'no_create': True, 'no_edit': True}"/>
                            </group>
                            <group>
                                <field name="payment_term" options="{'no_create': True, 'no_edit': True}" attrs="{'readonly': [('state', 'not in', ('draft', 'submit', 'unapproved'))]}"/>
                                <field name="incoterm" options="{'no_create': True, 'no_edit': True}" attrs="{'readonly': [('state', 'not in', ('draft', 'submit', 'unapproved'))]}"/>
                                <field name="destination" attrs="{'readonly': [('state', 'not in', ('draft', 'submit', 'unapproved'))]}"/>
                                <field name="reason" attrs="{'readonly': [('state', 'not in', ('draft', 'submit', 'unapproved'))]}"/>
                            </group>
                            <group>
                                <field name="vmi_supplier" attrs="{'readonly': [('state', 'not in', ('draft', 'submit', 'unapproved'))]}"/>
                                <field name="vmi_due" attrs="{'readonly': [('state', 'not in', ('draft', 'submit', 'unapproved'))]}"/>
                                <field name="si_supplier" attrs="{'readonly': [('state', 'not in', ('draft', 'submit', 'unapproved'))]}"/>
                                <field name="import_required" attrs="{'readonly': [('state', 'not in', ('draft', 'submit', 'unapproved'))]}"/>
                                <field name="local_foreign" attrs="{'readonly': [('state', 'not in', ('draft', 'submit', 'unapproved'))]}"/>
                            </group>
                            <!--<group>
                                <field name="purchase_contract" widget="dms_file" string="Purchase Contract" directory="model_muk_dms_directory.2" attrs="{'readonly': [('state', 'not in', ('draft', 'submit', 'unapproved'))]}"/>
                                <field name="probity_agreement" widget="dms_file" string="Probity Agreement" directory="model_muk_dms_directory.2" attrs="{'readonly': [('state', 'not in', ('draft', 'submit', 'unapproved'))]}"/>
                            </group> -->
                        </group>
                    </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

        <!--定义视图动作-->
