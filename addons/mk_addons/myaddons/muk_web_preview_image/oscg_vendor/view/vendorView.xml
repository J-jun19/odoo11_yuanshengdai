                        </group>
                        <group>
                            <field name="comment" attrs="{'readonly': [('state', 'not in', ('draft', 'unapproved'))]}"/>
                            <field name="state_msg" readonly="1"/>
                            <field name="webflow_number"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
